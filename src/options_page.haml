!!! 5
%html
  %head
    %link{:rel => 'stylesheet', :href => 'css/style.css'}
    %script{:src => 'js/lib/jquery.min.js'}
    %script{:src => 'js/lib/EventEmitter.min.js'}
    %script{:src => 'js/store.js'}
    %script{:src => 'js/options_page.js'}
  %body
    %section#content
      %h1
        Config for NotHub

      %form.configForm
        %dl
          %div
            Notifications:
          %dt
            will close automatically in
          %dd
            %input{:type => 'number', :name => 'notificationTimeout', :min => '0', 'data-default-value' => 0, 'data-template' => 'saved'}
            seconds
          %dt
            will be allowed to show max
          %dd
            %input{:type => 'number', :name => 'maxNotificationCount', :max => 3, :min => 1, 'data-default-value' => 3, 'data-template' => 'saved'}
            counts

      %form.resetConfig
        %dl
          %dt
            Reset to default
          %dd
            %input{:type => 'submit', :value => 'Reset'}

    %footer
